<div class="container">
  <div class="row">

    <div class="col-md-6">
      <h1>Editar Alumno {{theUser.username}}</h1>
    </div>

    <div class="col-md-6">

      <form action="/developers/edit?userId={{theUser._id}}" method="post">
        <div class="form-group">
          <label for="name-input">Nombre</label>
          <input name="username" type="text" class="form-control" id="name-input" value="{{theUser.username}}">
        </div>

        <button type="submit" class="btn btn-dark">Actualizar datos del Alumno</button>

      </form>
    </div>

  </div>
</div>